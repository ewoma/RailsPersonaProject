 <%= link_to 'New Song', new_song_path %>
<div class="caption">List of Songs</div>	
<div id="table">
	<div class="header-row row">
    <span class="cell primary">Title</span>
    <span class="cell">Lyrics</span>
     <span class="cell">Artist</span>
    <span class="cell">Year</span>
     <span class="cell">Album</span>
    <span class="cell">Song</span>
  </div>

		<% @songs.each do |song| %>
