				<div class="row">
	<input type="radio" name="expand">
    <span class="cell primary" data-label="Title"><%= song.title %></span>
    <span class="cell" data-label="Lyrics"><%= truncate song.lyrics %></span>
     <span class="cell" data-label="Artist"><%= song.artist %></span>
     <span class="cell" data-label="Year"><%= song.year %></span>
     <span class="cell" data-label="Album"><%= song.album %></span>
     <span class="cell" data-label="Song"><%= song.song %></span>

     <td><%= link_to 'Show', song_path(song) %></td>
				<td><%= link_to 'Edit', edit_song_path(song) %></td>
				<td><%= link_to 'Destroy', song_path(song), method: :delete, data: {confirm: 'Do you really want to delete?' } %></td>
		
  </div>


				
		<% end %>
	</table>




  
 
