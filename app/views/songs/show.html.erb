<%= link_to 'Back', songs_path %>
| <%= link_to 'Edit', edit_song_path(@song) %>
<div class="show">


	<p>
	<%= image_tag ('Art-Music.jpg'), :class => "show_image" %>
	</p>

	<p>
	<strong> Title:</strong>
	<%= @song.title %>
	</p>

	<p>
	<strong> Lyrics:</strong>
	<%= @song.lyrics %>
	</p>

	<p>
	<strong> Artist:</strong>
	<%= @song.artist %>
	</p>

	<p>
	<strong> Year:</strong>
	<%= @song.year %>
	</p>

	<p>
	<strong> Album:</strong>
	<%= @song.album %>
	</p>

	<p>
	<strong> Song:</strong>
	<%= @song.song %>

    <%= audio_tag @song.song.url, class: "audio-play", type: 'audio/mpeg', preload: :auto, controls: true  %>
	</p>
	<script>
	$(".audioButton").on("click", function()
		 {
		  $(".audio-play")[0].currentTime = 0;
		  return $(".audio-play")[0].play();
		 }
	); 
	</script>

	<div class="comment_show">
		<p>Comments</p>
		<%= render @song.comments %>

		<p>
			Add a comment:
		</p>
		<%= render "comments/form" %>
	</div>
</div>

